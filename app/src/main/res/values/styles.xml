<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="HorizintalView">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>


    <style name="ViewOfRoute" parent="HorizintalView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextviewTheamForRouteScreen" parent="TextviewTheamForLocationScreen">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertDialogCustom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FullScreenTheam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="LinearViewTheamHomeScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ToolbarViewTheam">
        <item name="android:background">@color/blackTransfarant</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>

    </style>

    <style name="wrapTheam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextviewTheamForToolbar" parent="wrapTheam">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/padding_medium_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LocationImageTheam" parent="MatchWrap">
        <item name="android:layout_weight">33</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LinearViewTheamForLocationScreenMain" parent="FullScreenTheam">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
        <item name="android:background">@color/blackTransfarant</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_page_buttons">
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_weight">33</item>
        <item name="android:background">@drawable/options_button_bground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="home_page_button_textview">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small_tiny</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="home_page_button_imageview">
        <item name="android:layout_marginTop">@dimen/margin_small_tiny</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearViewTheamForLocationScreen" parent="LinearViewTheamHomeScreen">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:weightSum">100</item>
    </style>


    <style name="TextviewTheamForLocationScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">50</item>
    </style>

    <style name="TextviewTheamFor">

        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextviewTheamFordot" parent="TextviewTheamFor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
