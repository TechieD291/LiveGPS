<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <com.gonext.live.gps.navigation.utils.view.CustomTextView
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small_tiny"
        android:gravity="center"
        android:text="Enter Category"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_xxlarge"
        app:custom_font="avenir_book" />

    <com.gonext.live.gps.navigation.utils.view.CustomEditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSearch"
        android:gravity="center"
        android:hint="Enter Category"
        android:inputType="text"
        android:padding="@dimen/padding_medium"
        app:custom_font="avenir_book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtSearch"
        android:layout_centerInParent="true"
        android:gravity="center">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtSearch"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_small"
            android:text="Add"
            android:textColor="@color/white"

            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_large"
            android:background="@color/colorPrimary"
            android:padding="@dimen/padding_tiny"
            android:paddingLeft="@dimen/padding_medium"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</RelativeLayout>